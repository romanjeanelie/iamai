<div class="phonePage__popup-container">
  <div class="phonePage__popup-bg"></div>
  <div class="phonePage__popup-wrapper">
    <button class="phonePage__popup-exit-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
        <rect
          x="0.00195312"
          y="1.13184"
          width="1.6"
          height="17.6"
          rx="0.8"
          transform="rotate(-45 0.00195312 1.13184)"
        />
        <rect y="12.4453" width="17.6" height="1.6" rx="0.8" transform="rotate(-45 0 12.4453)" />
      </svg>
    </button>

    {{! First state : form }}
    <div class="phonePage__popup-persona-preview">
      <div class="persona__preview-avatar-picture">
        <img
          src="https://res.cloudinary.com/dfdqiqn98/image/upload/q_auto:best/v1716386973/Phone-Call/persona-avatar_ofqzim.png"
          alt="avatar"
        />
      </div>

      <h3>Hotel Manager</h3>
      <p>Robust, Male, Mid 30s, American, Highly professional, Empathising, Knowledgeable, Helpful, Fast, Able to give
        suggestions.</p>
    </div>

    <form class="phonePage__popup-form">
      <div class="phonePage__popup-input intro">
        <input data-input="intro" type="text" placeholder="Enter intro Text" />
      </div>
      <div class="phonePage__popup-input prompt">
        <textarea data-input="prompt" type="text" placeholder="Enter yout prompt"></textarea>
      </div>

      <div class="phonePage__popup-input country">
        <div class="country__select-button">
          <svg class="chevron-down-icon" viewBox="0 0 12 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 9L0.803849 -9.78799e-07L11.1962 -7.02746e-08L6 9Z" />
          </svg>

          <span data-input="country" placeholder="Country"> Country </span>

          <svg class="check-icon" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M4.80912 10.7584C4.4967 11.0708 3.99017 11.0708 3.67775 10.7584C3.36533 10.4459 3.36533 9.93941 3.67775 9.62699L12.3048 1C12.6172 0.687581 13.1237 0.687581 13.4361 1C13.7486 1.31242 13.7486 1.81895 13.4361 2.13137L4.80912 10.7584Z"
            />
            <path
              d="M4.80082 10.7657C4.4884 11.0781 3.98187 11.0781 3.66945 10.7657L0.535096 7.63137C0.222677 7.31895 0.222676 6.81242 0.535095 6.5C0.847515 6.18758 1.35405 6.18758 1.66647 6.5L4.80082 9.63431C5.11324 9.94673 5.11324 10.4533 4.80082 10.7657Z"
            />
          </svg>
        </div>
        <ul class="country__select-dropdown" role="listbox">
          {{! generated by js  
          <li role="option">
            <input type="radio" id=${country.label} name="country" />
            <label for=${country.label}>${country.label}</label>
          </li>
          }}
        </ul>
      </div>

      <div class="phonePage__popup-input phoneNb">
        <div class="phoneNb__prefix-wrapper">
          <div class="phoneNb__prefix-button">
            <span class="phoneNb__prefix"> +XX </span>
            <svg class="chevron-down-icon" viewBox="0 0 12 9" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 9L0.803849 -9.78799e-07L11.1962 -7.02746e-08L6 9Z" />
            </svg>
          </div>
          <ul class="phoneNb__prefix-dropdown" role="listbox">
            {{! generated by js  
          <li role="option">
            <input type="radio" id=${country.label} name="country" />
            <label for=${country.label}>${country.label}</label>
          </li>
          }}
          </ul>
        </div>
        <input data-input="phoneNb" type="text" placeholder="Enter your number" />
      </div>
      <div class="phonePage__popup-input email">
        <input data-input="email" type="text" placeholder="Enter your email" />
      </div>
    </form>

    <button class="phonePage__popup-phone-button" disabled>
      <svg viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M23.999 5.92059C23.999 13.3585 13.3246 24.1401 5.77535 24.1401C2.79442 24.1401 -0.00097654 22.2765 -0.000976502 19.0936C-0.000976494 18.4257 5.14453 15.4117 5.77947 15.4117C6.81847 15.4117 8.33574 18.4999 9.25517 18.4999C11.4898 18.4999 18.3588 11.6309 18.3588 9.39628C18.3588 8.47685 15.2706 6.95958 15.2706 5.92059C15.2706 5.72681 18.1114 0.354534 18.5979 0.189614C21.2449 -0.948335 23.999 3.29836 23.999 5.92059Z"
        />
      </svg>
    </button>

    {{! Second state : discussion }}
    <h2 class="phonePage__popup-discussion-ai-title">Hotel Manager</h2>
    <div class="phonePage__popup-discussion-container">
      <div class="phonePage__popup-discussion-wrapper ai">
        <p class="message-role">AI</p>
        <p class="message-content">Hi there how may I help you?</p>
      </div>
      <div class="phonePage__popup-discussion-wrapper user">
        <p class="message-role">USER</p>
        <p class="message-content">Hi yes I would like to book a room for 2 next Friday?</p>
      </div>
    </div>
  </div>
</div>