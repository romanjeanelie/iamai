<div class="phone__debug">
  <button id="btn-toConnected">To connected</button>
  <button id="btn-toTalkToMe">To Talk to me</button>
  <button id="btn-toListening">To Listening</button>
  <button id="btn-finishTalk">Finish talk</button>
  <button id="btn-finishProcessing">Finish processing</button>
</div>

<div class="phone__container">
  <div class="phone__top">
    <button class="phone__pause">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.5 14L15.5 26" stroke="#00254E" stroke-width="1.2" stroke-linecap="round" />
        <path d="M24.5 14L24.5 26" stroke="#00254E" stroke-width="1.2" stroke-linecap="round" />
      </svg>
    </button>

    <button class="phone__close">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M15.6797 24.2959L25.2258 14.7498"
          stroke="#00254E"
          stroke-opacity="1"
          stroke-width="1.23752"
          stroke-linecap="round"
        />
        <path
          d="M25.0469 24.5703L15.5008 15.0242"
          stroke="#00254E"
          stroke-opacity="1"
          stroke-width="1.23752"
          stroke-linecap="round"
        />
      </svg>
    </button>
  </div>
  <div class="phone__bottom">
    <p class="phone__info active"></p>
    <p class="phone__info">not active</p>
  </div>
</div>